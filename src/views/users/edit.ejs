<!DOCTYPE html>
<html lang="en">
  <%- include('../partials/head') %>
  <body>
    <%- include('../partials/header') %>
    <main class="main-edit">
      <form class="form-edit" action="/users/edit/<%= user.id %>?_method=PUT" method="POST" enctype="multipart/form-data">
        <h2>Edición de perfil</h2>
        <div class="info-edit">
          <div class="formu-edit">
            <!-- <label for="name">Nombre</label> -->
            <input type="text" name="name" value="<%= user.first_name%>">
            <% if (locals.errors && errors.name) { %>
            <div class="mensajesError"><%= errors.name.msg %></div>
            <% } %>


            <div class="formu-edit">
                <!-- <label for="lastName">Apellido (opcional)</label> -->
              
              <input type="text" name="lastName" value="<%=user.last_name %>">
            </div>

            <% if (locals.errors && errors.Apellido) { %>
              <div class="mensajesError"><%= errors.Apellido.msg %></div>
              <% } %>

            <!-- <label for="email">E-mail</label> -->
            <input type="email" name="email" value="<%= user.email%>">
            <% if (locals.errors && errors.email) { %>
            <div class="mensajesError"><%= errors.email.msg %></div>
            <% } %>

            <!-- <label for="password">Contraseña</label> -->
          </div>        
        </div>
        <br />
        <br />

        <div>
          <label for="">Cambiar avatar</label>
          <input type="file" name="image" ">
          <% if (locals.errors && errors.image) { %>
          <div class="mensajesError"><%= errors.image.msg %></div>
          <% } %>
        </div>

        <button type="submit">Guardar</button>
        
      </form>
    </main>

    <%- include('../partials/footer') %>
  </body>
</html>

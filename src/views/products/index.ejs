<!DOCTYPE html>
<html lang="es">
<%- include('../partials/head') %>
    <body>
        <!--ENCABEZADO-->
        <%- include('../partials/header') %>

        <!--SLIDER-->
        <div class="slider">
            <ul>
                <li>
                    <img src="/images/banner1.jpg">
                </li>
                <li>
                    <img src="/images/banner2.jpg">
                </li>
                <li>
                    <img src="/images/banner3.jpg">
                </li>
                <li>
                    <img src="/images/banner4.jpg">
                </li>
            </ul>
        </div>

        <!--SECCION DE PRODUCTOS-->
        <main class="index-img">
            
            <h2>NOVEDADES</h2>
            <section class="Productos-relacionados contenedor-grid">

                <% for( let i =0; i < products.length; i++ ) { %>
                    <article>
                    <a href="/products/detailProduct/<%= products[i].id %> ">
                        <% for( let j = 0; j < products[i].images.length; j++ ) { %>
                            <img src="/images/products/<%= products[i].images[j].name %> " alt="portada<%= products[i].name %> ">
                        <% } %>
                       
                    </a>
                    <div class="main-product">
                        
                        <h3><%= products[i].name%> <i class="fas fa-book"></i></h3>
                        <p>$<%= products[i].price %> </p>
                        <form action="/views/home.html" method="POST">
                        <input type="submit" class="btn3" value="Agregar al carrito">
                        </form>
                    </div>
                </article>
                <% } %>
                

            </section>

             
            
        </main>

        <!--PIE DE PAGINA-->
        <%- include('../partials/footer') %>
        
    </body>
</html>
